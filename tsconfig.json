{
    "compilerOptions": {
        // 目标语言的版本
        "target": "ES5",
        // 指定生成代码的模板标准
        "module": "commonjs",
        // 不允许隐式的 any 类型
        "noImplicitAny": true,
        // 删除注释
        "removeComments": true,
        // 保留 const 和 enum 声明
        "preserveConstEnums": true,
        // 生成目标文件的sourceMap文件
        "sourceMap": true
    },
}